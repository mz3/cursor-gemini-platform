{
  "name": "platform-api",
  "version": "1.0.0",
  "description": "Meta-application platform API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "test:unit": "jest --testPathPattern=\"\\.spec\\.ts$|health\\.test\\.ts$\" --passWithNoTests",
    "test:integration": "jest --testPathPattern=\"\\.integration\\.ts$\" --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npx typeorm-ts-node-esm migration:generate -d src/config/database.ts",
    "migration:run": "npx typeorm-ts-node-esm migration:run -d src/config/database.ts",
    "migration:revert": "npx typeorm-ts-node-esm migration:revert -d src/config/database.ts",
    "migration:show": "npx typeorm-ts-node-esm migration:show -d src/config/database.ts",
    "seed": "tsc && node dist/utils/seedDatabase.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "meta-application",
    "platform",
    "api",
    "typescript"
  ],
  "author": "Platform Team",
  "license": "MIT"
}
